---
interface Props {
	href: string;
	variant?: "primary" | "secondary" | "tertiary";
	size?: "small" | "medium" | "large";
	type?: "vertical" | "horizontal";
	withIcon?: boolean | undefined;
	fontSize?: string;
	gap?: string;
}

import Link from "@elements/Link.astro";
import { getFontSizeClass } from "../utils/spacing";

const {
	href,
	variant = "primary",
	size = "medium",
	type = "horizontal",
	withIcon,
	gap,
	...rest
} = Astro.props as Props;

// フォントサイズクラスの生成
const fontSizeClass = getFontSizeClass(size);
---

<button class:list={["button", `button--${variant}`, `button--${size}`]}>
  <Link
    href={href}
    type={type}
    withIcon={withIcon !== undefined ? true : undefined}
    fontSize={fontSizeClass}
    gap={gap}
    {...rest}
  >
    <slot />
  </Link>
</button>

<style lang="scss">
  @use "../styles/tools/mixin" as mix;

  a {
    color: inherit;
    text-decoration: none;
  }

  .button {
    // Button Base
    border-radius: var(--space-2xs);
    cursor: pointer;

    // Button Surface Variants
    &--primary {
      border: none;
      background-color: var(--color-background-accent);
      color: var(--color-text-primary);

      &:hover {
        background-color: var(--color-hover-contained);
      }
    }

    &--secondary {
      border: 1px solid var(--color-border-low, var(--color-border));
      background-color: transparent;
      color: var(--color-text-middle);

      &:hover {
        background-color: var(--color-hover-outlined);
      }
    }

    &--tertiary {
      border: none;
      background-color: transparent;
      color: var(--color-text-middle);

      &:hover {
        background-color: var(--color-hover-neutral);
      }
    }

    // Button Size Variants
    &--small {
      padding: var(--space-2xs) var(--space-xs);

      @include mix.font-size("14");
    }

    &--medium {
      padding: var(--space-xs) var(--space-s);

      @include mix.font-size("16");
    }

    &--large {
      padding: var(--space-s) var(--space-m);

      @include mix.font-size("24");
    }
  }
</style>
