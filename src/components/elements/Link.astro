---
/**
 * Linkコンポーネント
 *
 * リンクを表示するためのコンポーネント
 * 縦横のレイアウトを切り替えることができる
 */

import BaseElement from "./base/BaseElement.astro";

interface Props {
	href: string;
	external?: boolean;
	disabled?: boolean;
	class?: string;
	fontSize?: string;
	size?: string;
	type?: "vertical" | "horizontal";
	withIcon?: boolean | undefined;
	padding?: string;
	[key: string]: unknown;
}

const {
	class: className,
	href,
	type = "horizontal",
	withIcon,
	fontSize,
	...rest
} = Astro.props as Props;

const layoutClass = `link--${type}`;
const iconClass =
	type === "horizontal"
		? withIcon !== undefined
			? "link--with-icon"
			: "link--without-icon"
		: "";

const baseProps = {
	componentClass: "link",
	class: [layoutClass, iconClass, className].filter(Boolean).join(" "),
	href,
	...rest,
};
---

<BaseElement Element="a" {...baseProps}>
  <slot />
</BaseElement>

<style lang="scss">
  @use "../../styles/tools/mixin" as mix;

  @include mix.element-base("link") {
    display: grid;

    // フォントサイズ制御
    @include mix.font-size;

    &--vertical {
      gap: var(--link-vertical-gap, var(--space-xs));
      justify-items: center;

      @include mix.spacing-classes("--link-vertical-gap", "gap");
    }

    &--horizontal {
      grid-auto-flow: column;
      align-items: center;
    }

    &--with-icon {
      grid-template-columns: auto 1fr;
      gap: var(--link-horizontal-gap, var(--space-xs));

      @include mix.spacing-classes("--link-horizontal-gap", "gap");
    }

    &--without-icon {
      grid-template-columns: 1fr;
    }
  }
</style>
